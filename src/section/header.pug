.header
    .header__my-link ПВ
    .header__navigate
        each nav_item in [{link:'',name:'main',title:'Главная'},{link:'',name:'about-me',title:'Обо мне'},{link:'',name:'skills',title:'Навыки'},{link:'',name:'works',title:'Работы'},{link:'',name:'reviews',title:'Отзывы'},{link:'',name:'contact',title:'Связаться'}]
            .header__navigate__item
                .header__navigate__link
                    a(class=`header__navigate__${nav_item.name}__link`)=nav_item.title
    .header__socials
        .header__socials__item
            a(class=`socials__link socials__link__vk` href='#')
                svg.socials__link.social-icon
                    use(xlink:href="./sprite.svg#vk")
        .header__socials__item
            a(class=`socials__link socials__link__insta` href='#')
                svg.socials__link.social-icon
                    use(xlink:href="./sprite.svg#insta")
        .header__socials__item
            a(class=`socials__link socials__link__github` href='#')
                svg.socials__link.social-icon
                    use(xlink:href="./sprite.svg#github")                        